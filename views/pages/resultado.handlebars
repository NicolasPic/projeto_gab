<div class="resultado-container">

    <div class="centro-resultado-container">
        <h1>GABHoot</h1>
    </div>

    <!-- Metade superior da tela -->
    <div class="metade-resultado-container resultado-superior">
        <h1>Resultado Final</h1>
        <p>Total de acertos: {{acertos}}</p>
        <p>Pontuação: {{pontuacaoIndividual}}</p>
    </div>

    <!-- Resultados de todos os jogadores -->
    <div class="metade-resultado-container resultado-superior">
        <h2>Resultados da Sala</h2>
        <ul>
            {{#each resultados}}
                <li>
                    Jogador: {{nome}} - Pontuação: {{pontuacaoTotalIndividual}}
                </li>
            {{/each}}
        </ul>
    </div>

    <!-- Metade inferior da tela -->
    <div class="metade-resultado-container resultado-inferior">
        <button class="botao-resultado" id="btnIniciar">Jogar Novamente</button>
        <a href="/home" class="botao-resultado">Voltar para o Início</a>
    </div>

</div>

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    const usuarioID = "{{usuarioID}}";
    const codigoSala = "{{codigoSala}}";
    const pontuacaoIndividual1 = "{{pontuacaoIndividual}}";
    const resultadosJSON =  JSON.stringify({{{resultados}}});
    const acertos1 = {{acertos}}; 

    console.log("Acertos:", acertos1);
    console.log("pontuacaoIndividual:", pontuacaoIndividual1);
    console.log("Resultados:", resultadosJSON);
    console.log("Código da Sala:", codigoSala);

    if (!sessionStorage.getItem('acertos')) {
    sessionStorage.setItem('acertos', acertos1);
    }

    if (!sessionStorage.getItem('resultados')) {
        sessionStorage.setItem('resultados', resultadosJSON);
    }

    if (!sessionStorage.getItem('pontuacaoIndividual')) {
        sessionStorage.setItem('pontuacaoIndividual', pontuacaoIndividual1);
    }

    socket.on('connect', () => {
        console.log(`Conectado com socket ID: ${socket.id}`);
        socket.emit('reconectar', { usuarioID });
    });

    document.getElementById('btnIniciar').addEventListener('click', () => {
        sessionStorage.removeItem('acertos');
        sessionStorage.removeItem('resultados');
        sessionStorage.removeItem('pontuacaoIndividual');

        socket.emit('redirecionarSala', { codigoSala, usuarioID });
    });

    socket.on('redirect', (url) => {
        window.location.href = url;
    });

    window.addEventListener('load', () => {
    const acertosSession = sessionStorage.getItem('acertos');
    const resultadosSession = sessionStorage.getItem('resultados');
    const pontuacaoIndividualSession = sessionStorage.getItem('pontuacaoIndividual');
    const resultadosJSONSession = resultadosSession ? JSON.parse(resultadosSession) : [];

    // Atualiza os elementos da página
    document.querySelector('.metade-resultado-container.resultado-superior p:nth-child(2)').textContent = `Total de acertos: ${acertosSession}`;
    document.querySelector('.metade-resultado-container.resultado-superior p:nth-child(3)').textContent = `Pontuação: ${pontuacaoIndividualSession}`;

    const resultadosUl = document.querySelector('.metade-resultado-container.resultado-superior ul');
    resultadosUl.innerHTML = ''; 

    resultadosJSONSession.forEach((resultado) => {
        const li = document.createElement('li');
        li.textContent = `Jogador: ${resultado.nome} - Pontuação: ${resultado.pontuacaoTotalIndividual}`;
        resultadosUl.appendChild(li);
    });
});

</script>
